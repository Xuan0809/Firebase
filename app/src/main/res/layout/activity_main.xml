<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="24dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="24dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/google_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GoogleLogin"
        android:layout_marginStart="10dp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="65dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/fb_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FBLogin"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/google_sign_in"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/logout_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/fb_sign_in"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/reset_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ResetPassword"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/logout_bt"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/register_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account register"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/reset_bt"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>